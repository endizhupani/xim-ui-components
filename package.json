{
	"version": "0.0.0-development",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"commit": "git cz",
		"acp": "git add . && npm run commit && git push",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"semantic-release": "semantic-release --branches main"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": false,
		"trailingComma": "es5"
	},
	"name": "@ximea/xim-ui-components",
	"author": "Endi Zhupani",
	"module": "dist/xim-ui-components.esm.js",
	"size-limit": [
		{
			"path": "dist/xim-ui-components.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/xim-ui-components.esm.js",
			"limit": "10 KB"
		}
	],
	"dependencies": {
		"@material-ui/core": "^4.11.3",
		"@material-ui/icons": "^4.11.2",
		"@material-ui/lab": "^4.0.0-alpha.60",
		"material-ui-confirm": "^2.1.3"
	},
	"devDependencies": {
		"@babel/core": "^7.15.0",
		"@size-limit/preset-small-lib": "^5.0.3",
		"@storybook/addon-essentials": "^6.3.7",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.3.7",
		"@storybook/addons": "^6.3.7",
		"@storybook/react": "^6.3.7",
		"@types/react": "^17.0.19",
		"@types/react-dom": "^17.0.9",
		"babel-loader": "^8.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^7.0.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-is": "^17.0.2",
		"semantic-release": "^17.4.7",
		"size-limit": "^5.0.3",
		"tsdx": "^0.14.1",
		"tslib": "^2.3.1",
		"typescript": "^4.4.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/endizhupani/xim-ui-components.git"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
